<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1324.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.gdse.hotelmanagement.crystalwave.controller.ReceptionistControllers.GenerateBillController">
    <!-- Header -->
    <VBox alignment="CENTER" prefHeight="60.0" prefWidth="1324.0" style="-fx-background-color: #2A2E37;">
        <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Generate Bill">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
    </VBox>

    <!-- Billing Details Form -->
    <AnchorPane layoutX="79.0" layoutY="104.0" prefHeight="700.0" prefWidth="1141.0" style="-fx-border-color: #2A2E37; -fx-border-width: 1;">

        <!-- GuestModel Information -->
        <Label layoutX="20.0" layoutY="30.0" style="-fx-font-weight: bold;" text="Guest Name:" />
        <TextField fx:id="guestNameField" layoutX="150.0" layoutY="25.0" prefWidth="300.0" />

        <Label layoutX="20.0" layoutY="80.0" style="-fx-font-weight: bold;" text="Room Number:" />
        <TextField fx:id="roomNumberField" layoutX="150.0" layoutY="75.0" prefWidth="150.0" />

        <Label layoutX="20.0" layoutY="130.0" style="-fx-font-weight: bold;" text="Check-in Date:" />
        <DatePicker fx:id="checkInDatePicker" layoutX="150.0" layoutY="125.0" prefWidth="200.0" />

        <Label layoutX="20.0" layoutY="180.0" style="-fx-font-weight: bold;" text="Check-out Date:" />
        <DatePicker fx:id="checkOutDatePicker" layoutX="150.0" layoutY="175.0" prefWidth="200.0" />

        <!-- Billing Charges -->
        <Label layoutX="600.0" layoutY="30.0" style="-fx-font-weight: bold;" text="Room Charges:" />
        <TextField fx:id="roomChargesField" layoutX="720.0" layoutY="25.0" prefWidth="200.0" />

        <Label layoutX="600.0" layoutY="80.0" style="-fx-font-weight: bold;" text="Additional Charges:" />
        <TextField fx:id="additionalChargesField" layoutX="720.0" layoutY="75.0" prefWidth="200.0" />

        <Label layoutX="600.0" layoutY="130.0" style="-fx-font-weight: bold;" text="Total Amount:" />
        <TextField fx:id="totalAmountField" layoutX="720.0" layoutY="125.0" prefWidth="200.0" />

        <Label layoutX="600.0" layoutY="180.0" style="-fx-font-weight: bold;" text="Payment Status:" />
        <TextField fx:id="paymentStatusField" layoutX="720.0" layoutY="175.0" prefWidth="200.0" />

        <!-- Generate Bill Button -->
        <Button layoutX="500.0" layoutY="260.0" onAction="#handleGenerateBill" style="-fx-background-color: #2A2E37; -fx-text-fill: white; -fx-font-weight: bold;" text="Generate Bill" prefWidth="150.0" />
    </AnchorPane>
</AnchorPane>
